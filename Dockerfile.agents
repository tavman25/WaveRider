# Agents Dockerfile
FROM python:3.11-slim

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE 1
ENV PYTHONUNBUFFERED 1

# Install system dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

# Set work directory
WORKDIR /app

# Copy agent requirements
COPY agents/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY agents/ .

# Create models directory
RUN mkdir -p models

# Create non-root user
RUN adduser --disabled-password --gecos '' agent-user
RUN chown -R agent-user:agent-user /app
USER agent-user

# Expose port
EXPOSE 8001

# Health check
HEALTHCHECK --interval=30s --timeout=30s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8001/agents/health || exit 1

# Run the agent server
CMD ["uvicorn", "agent_server:app", "--host", "0.0.0.0", "--port", "8001"]
